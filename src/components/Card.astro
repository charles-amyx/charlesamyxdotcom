---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  href: string;
  title: string;
  image: ImageMetadata;
  type: string;
  loading?: "eager" | "lazy";
  isSideProject?: boolean;
  slug?: string;
}

const {
  href,
  title,
  image,
  type,
  loading = "lazy",
  isSideProject = false,
  slug,
} = Astro.props;

const linkUrl = slug ? `/side-projects/${slug}` : href;
const isExternal = !slug;
---

<div class="card">
  <a
    href={linkUrl}
    class="card-link"
    {...isExternal ? { target: "_blank", rel: "noopener noreferrer" } : {}}
  >
    <div class="card-image-container">
      <div class={`frame ${isSideProject ? "frame--side-project" : ""}`}>
        <Image src={image} alt={title} class="card-image" loading={loading} />
      </div>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-type">{type}</p>
  </a>
</div>
