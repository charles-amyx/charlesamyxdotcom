---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Page Not Found">
  <main
    class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4"
  >
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8">Oops! This page seems to have wandered off...</p>

    <a
      href="/"
      class="inline-flex items-center px-6 py-3 text-lg font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
    >
      Return Home
    </a>
  </main>
</Layout>

